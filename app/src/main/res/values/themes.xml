<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Parking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/application_dark_blue</item>
        <item name="colorPrimaryVariant">@color/application_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">70sp</item>

        <item name="android:textColorHint">@color/application_dark_blue</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="helperTextTextColor">@color/red</item>
        <item name="android:saveEnabled">false</item>
        <item name="errorIconDrawable">@drawable/error_outline</item>

    </style>

    <style name="CustomToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/application_dark_blue</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>


    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.MaterialComponents.Headline5" />

    <style name="CustomToolbarPrimary" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/application_dark_blue</item>
        <item name="colorSecondary">@color/application_dark_blue</item>
        <!--Changes the color of text-->
        <item name="theme">@style/searchViewTheme</item>

    </style>
    <style name="searchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:editTextColor">@color/application_dark_blue</item>
        <item name="iconifiedByDefault">false</item>
        <item name="searchIcon">@null</item>
        <item name="searchViewStyle">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/search</item>

    </style>


</resources>